<Window x:Class="Finder.Views.Profile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Finder.Views"
        mc:Ignorable="d"
        Title="Profile" Height="480" Width="860" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,-3">
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="150" Margin="10,10,0,0" VerticalAlignment="Top" Width="832"/>
        <Label Content="Alterar dados" HorizontalAlignment="Left" Height="34" Margin="372,10,0,0" VerticalAlignment="Top" Width="116" FontWeight="Bold" FontSize="16"/>
        <Label Content="Novo E-mail:" HorizontalAlignment="Left" Margin="24,48,0,0" VerticalAlignment="Top" Height="26" Width="190" FontSize="14"/>
        <TextBox HorizontalAlignment="Left" Height="33" Margin="24,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="398"/>
        <Label Content="Nova Senha:" HorizontalAlignment="Left" Margin="430,44,0,0" VerticalAlignment="Top" Height="26" Width="190" FontSize="14"/>
        <TextBox HorizontalAlignment="Left" Height="33" Margin="430,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="398"/>
        <Button Content="Salvar alterações" HorizontalAlignment="Left" Height="36" Margin="334,112,0,0" VerticalAlignment="Top" Width="192"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="277" Margin="10,165,0,0" VerticalAlignment="Top" Width="832">
            <Button x:Name="btnSavePreference" Content="Salvar Preferências" HorizontalAlignment="Left" Height="21" Margin="355,245,0,0" VerticalAlignment="Top" Width="146"/>
        </Border>
        <Label Content="Alterar Preferências" HorizontalAlignment="Left" Height="34" Margin="357,165,0,0" VerticalAlignment="Top" Width="169" FontWeight="Bold" FontSize="16"/>
        <StackPanel x:Name="stpPreference" HorizontalAlignment="Left" Height="203" Margin="240,204,0,0" VerticalAlignment="Top" Width="380"/>

    </Grid>
</Window>
